from PySimpleGUI import *
import requests

conversores = ['USD', 'EUR', 'GBP', 'BRL']
temperatura = ['F', 'C']
peso = ['Grama', 'Quilograma', 'Tonelada', 'Libras']
comprimento = ['Milímetro', 'Centímetro', 'Metro', 'Quilometro']
volume = ['Ml', 'Mililitro', 'Litro']
area = ['Milimetro Quadrado', 'Centímetro Quadrado', 'Metro Quadrado', 'Quilometro Quadrado']
tempo = ['Hora', 'Minuto', 'Segundo']
Energia = ['Joule', 'Caloria']


# -- FUNÇÃO CONVERSÃO DE MOEDAS --
def janela_moeda():
    conversao_moeda = [
        [
            # ------------ Superior esquerdo -----------------------------
            Column([
                [Text('Converter de', background_color='black'),
                 Text('                        ', background_color='black'), Text('Valor', background_color='black')],

                [DropDown(conversores, default_value='BRL', key='-DROP1-', size=(9, 0)),
                 Input(key='-INPUT1-', size=(20, 80), background_color='gray', border_width=0)],

                [DropDown(conversores, key='-DROP2-', default_value='USD', size=(9, 0)),
                 Input(key='-TEXTO-', size=(20, 3), background_color='gray', border_width=0)], ],
                background_color='black'),

            # --- SUPERIOR DIREITO
            Column([
                [Button(image_filename='Troca.png', image_size=(30, 30), key='-TROCA-')]
            ], background_color='black', element_justification='left', pad=((0, 0), (25, 0))),

            Column([[Image(filename='Moeda Icone.png', background_color='black', pad=((15, 0), (35, 15)))]],
                   element_justification='right', background_color='black'),

        ],

        [
            Column([
                # ------------ BOTÕES -----------------------------
                [Button(key='7', image_filename='7.png', image_size=(60, 60), border_width=0),
                 Button(key='8', image_filename='8.png', image_size=(60, 60), border_width=0),
                 Button(key='9', image_filename='9.png', image_size=(60, 60), border_width=0)],
                [Button(key='4', image_filename='4.png', image_size=(60, 60), border_width=0),
                 Button(key='5', image_filename='5.png', image_size=(60, 60), border_width=0),
                 Button(key='6', image_filename='6.png', image_size=(60, 60), border_width=0)],
                [Button(key='1', image_filename='1.png', image_size=(60, 60), border_width=0),
                 Button(key='2', image_filename='2.png', image_size=(60, 60), border_width=0),
                 Button(key='3', image_filename='3.png', image_size=(60, 60), border_width=0)],
                [Button(key='.', image_filename='ponto.png', image_size=(60, 60), border_width=0),
                 Button(key='0', image_filename='0.png', image_size=(60, 60), border_width=0),
                 Button(key='x', image_filename='deletar.png', image_size=(60, 60), border_width=0)]],
                background_color='black'),

            Column([[Button(key='IGUAL', image_filename='igual.png', image_size=(50, 250), size=(9, 1))]],
                   pad=(0, 0), background_color='black'),

            Column([[Button(image_filename='Temperatura.png', image_size=(100, 30), key='Temp')],
                    [Button(image_filename='Peso e Massa.png', image_size=(100, 30), key='MASSA')],
                    [Button(image_filename='Comprimento.png', image_size=(100, 30), key='COMPRIMENTO')],
                    [Button(image_filename='Volume.png', image_size=(80, 30), key='Volume')],
                    [Button(image_filename='Área.png', image_size=(80, 30), key='Area')],
                    [Button(image_filename='Tempo.png', image_size=(80, 30), key='Tempo')],
                    [Button(image_filename='Energia.png', image_size=(80, 30), key='Energia')]
                    ],
                   element_justification='left', pad=(0, 0), background_color='black'),
        ]
    ]
    return Window('Cotação de Moedas', conversao_moeda, background_color='black', button_color='black',
                  titlebar_text_color='black')


def janela_temp():
    conversao_temp = [

        [
            Column([
                [Text('Converter de', background_color='black'),
                 Text('                        ', background_color='black'), Text('Valor', background_color='black')],
                [DropDown(temperatura, size=(10, 0), default_value='C', key='-DROP1-'),
                 Input(background_color='gray', key='-INPUT1-', size=(20, 3))],
                [DropDown(temperatura, size=(10, 0), key='-DROP2-', default_value='F'),
                 Input(background_color='gray', key='-TEXTO2-', size=(20, 3))],
            ], background_color='black'),

            Column([
                [Button(image_filename='Troca.png', image_size=(30, 30), key='-TROCA-')]

            ], background_color='black', element_justification='left', pad=((0, 0), (20, 0))),

            Column([[Image(filename='Tempo Icone.png', background_color='black', pad=((5, 0), (35, 15)))]],
                   element_justification='right', background_color='black'),
        ],

        [
            Column([
                # ------------ BOTÕES -----------------------------
                [Button(key='7', image_filename='7.png', image_size=(60, 60), border_width=0),
                 Button(key='8', image_filename='8.png', image_size=(60, 60), border_width=0),
                 Button(key='9', image_filename='9.png', image_size=(60, 60), border_width=0)],
                [Button(key='4', image_filename='4.png', image_size=(60, 60), border_width=0),
                 Button(key='5', image_filename='5.png', image_size=(60, 60), border_width=0),
                 Button(key='6', image_filename='6.png', image_size=(60, 60), border_width=0)],
                [Button(key='1', image_filename='1.png', image_size=(60, 60), border_width=0),
                 Button(key='2', image_filename='2.png', image_size=(60, 60), border_width=0),
                 Button(key='3', image_filename='3.png', image_size=(60, 60), border_width=0)],
                [Button(key='.', image_filename='ponto.png', image_size=(60, 60), border_width=0),
                 Button(key='0', image_filename='0.png', image_size=(60, 60), border_width=0),
                 Button(key='x', image_filename='deletar.png', image_size=(60, 60), border_width=0)]],
                background_color='black', pad=(0, 0)),

            Column([[Button(key='-IGUAL1-', image_filename='igual.png', image_size=(50, 250), size=(9, 1))]],
                   pad=(0, 0), background_color='black'),

            Column([[Button(image_filename='Moeda.png', image_size=(80, 30), key='Moeda')],
                    [Button(image_filename='Peso e Massa.png', image_size=(100, 30), key='MASSA')],
                    [Button(image_filename='Comprimento.png', image_size=(100, 30), key='COMPRIMENTO')],
                    [Button(image_filename='Volume.png', image_size=(80, 30), key='Volume')],
                    [Button(image_filename='Área.png', image_size=(80, 30), key='Area')],
                    [Button(image_filename='Tempo.png', image_size=(80, 30), key='Tempo')],
                    [Button(image_filename='Energia.png', image_size=(80, 30), key='Energia')]
                    ],
                   element_justification='left', pad=(0, 0), background_color='black'),
        ]
    ]
    return Window('Conversor de Temperatura', conversao_temp, background_color='black', titlebar_text_color='black')


